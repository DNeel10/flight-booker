<h2>Search for Flights</h2>

<%= render "search_form" %>

<h2> Search Results </h2>

  <table style="width: 100%; border: 2px solid black">
    <tr>
      <th style="text-align: left; border-bottom: 1px solid black">Select Flight </th>
      <th style="text-align: left; border-bottom: 1px solid black">Departing From </th>
      <th style="text-align: left; border-bottom: 1px solid black">Arriving At </th>
      <th style="text-align: left; border-bottom: 1px solid black">Departure Date </th>
    </tr>

    <% form_with url: '/flights', method: :get do |f| %>
    <% end %>

    <% @flights.each do |flight| %>
    <tr>
      <td>
        <%= radio_button :booking, :flight_id, "#{flight.id}" %>
        <%= label :booking_flight_id, flight.id %>
      </td>
      <td><%= flight.departure_airport.code %></td>
      <td><%= flight.arrival_airport.code %></td>
      <td><%= flight.departure_date.strftime("%m-%d-%Y") %>
    </tr>
    <% end %>
  </table>
  <br>
  <%= submit_tag("Select Flight") %>


